<!DOCTYPE html>
<html>
<head>
  <title>Jamarks</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true  %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true  %>
  <%= csrf_meta_tags  %>
  <script src='//cdn.embedly.com/widgets/platform.js'></script>
</head>
<body>
  <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="#">Jamarks</a>
      </div>
      <div>
        <ul class="nav navbar-nav">
          <li role="presentation"><a href="#"><%= link_to "Home", root_path  %></a></li>
          <li role="presentation"><a href="#"><%= link_to "About", about_path %></a></li>
          <li role="presentation"><a href="#"><%= link_to "Topics", topics_path %></a></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user %>

          <li><a href="#">Hello <%= link_to (current_user.name || current_user.email), user_path(current_user) %>! </li></a>
              <li><a href="#"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></a></li>
            <% else %>
              <li><a href="#"><span class="glyphicon glyphicon-log-in"></span><%= link_to "Sign In", new_user_session_path %></a></li>
              or 
              <li><a href="#"><span class="glyphicon glyphicon-user"></span><%= link_to "Sign Up", new_user_registration_path %></a></li>
            <% end %>
        </ul>
      </div>
    </div>
  </nav>
   

    
  </div>
  <% if flash[:notice] %>
    <div class="alert alert-success">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:notice] %>
    </div>
  <% elsif flash[:error] %>
    <div class="alert alert-danger"</div>"
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <%= flash[:error] %>
    </div>
  <% elsif flash[:alert] %>
    <div class="alert alert-warning"</div>
      <button type="button" class="close" data-dismiss="alert" >&times;</button>
      <%= flash[:alert] %>
    </div>
  <% end %>
<%= yield  %>
</div> 
</body>
</html>
