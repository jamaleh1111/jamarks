<!DOCTYPE html>
%html
%head
  %title Jamarks
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true 
  = javascript_include_tag 'application', 'data-turbolinks-track' => true 
  = csrf_meta_tags 

%body
  %ul
    %li= link_to "Home", welcome_index_path 
    %li= link_to "About", welcome_about_path

  - if flash[:notice] 
    .alert alert-success
      %button.close{"data-dismiss" => "alert", :type => "button"}x
      = flash[:notice]

  - elsif flash[:error]
    .alert alert-danger
      %button.close{"data-dismiss" => "alert", :type => "button"}x
      = flash[:error]

  -elsif flash[:alert]
    .alert alert-warning
      %button.close{"data-dismiss" => "alert", :type => "button"}x
      = flash[:alert]
      
    .class 

= yield 


