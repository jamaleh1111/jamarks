= link_to "New Topic", new_topic_path(@topic), class: 'btn btn-success'

%h1= @topic.title

= link_to "Edit", edit_topic_path(@topic), class: 'btn btn-success'

= link_to "Delete", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' }


- @bookmarks.each do |bookmark|
  = link_to bookmark.url

/ - if policy(Bookmark.new).create?
= link_to "New Bookmark", new_topic_bookmark_path(@topic, Bookmark.new), class: 'btn btn-success'


= link_to "Delete", [@topic, @bookmark], method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' }